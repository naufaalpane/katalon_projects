@using GPPSU.Models.Common;
@using GPPSU.Models.DayByDayDeliveryPackingCoeficient;
@{
    PagingModel page = ViewData["Paging"] != null ? (PagingModel)ViewData["Paging"] : new PagingModel(0, 1, 10);

    List<DayByDayDeliveryPackingCoeficient> listData = (List<DayByDayDeliveryPackingCoeficient>)ViewData["DaybyDayDPCData"] != null ? (List<DayByDayDeliveryPackingCoeficient>)ViewData["DaybyDayDPCData"] : new List<DayByDayDeliveryPackingCoeficient>();

    List<DailyHeaderList> dynamicDaily = (List<DailyHeaderList>)ViewData["dynamicDailyHeader"];
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#checkall").click(function () {
            $(".grid-checkbox").prop("checked", $("#checkall").is(":checked"));
        });

        $(".grid-checkbox").click(function () {
            $("#checkall").prop("checked", $('.grid-checkbox:not(#checkall)').not(':checked').length == 0);
        });
    });

    var totalData = @listData.Count;
</script>

<div class="customContainer" style="margin-top: -10px;">
    <div class="col-md-12">
        <div class="card customShadow">
            <div class="preload">
                @*<div class="spinnerDisplay"></div>*@
            </div>
            <div class="card-body sk-loading">
                <div class="row mb-3">
                    <div class="col-md-3">
                        <button id="btnUpload" type="button" class="btn btn-info initialBtn">Upload</button>
                        <button id="btn_download" type="button" id="btn-download" class="btn btn-primary initialBtn" onclick="onDownload()">Download</button>
                    </div>
                    <div class="col-md-9 text-right">
                        <button class="btn btn-md btn-primary initialBtn" id="insertLine">Add</button>
                        <button type="button" id="btnDelMultiple" class="btn btn-danger initialBtn">Delete</button>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-12">
                        <div class="table-responsive customTableBorder">
                            <div class="tableScroll">
                                <table class="customTable text-center" id="tblDetail" width="100%">
                                    <thead>
                                        <tr>
                                            <th rowspan="3" class="p-2 stickyColumn" style="padding: 3px 20px;">
                                                <input class="grid-checkboxDetail ace initialBtn" type="checkbox" id="checkall" />
                                                <span class="lbl" title="Choose"></span>
                                            </th>
                                            <th rowspan="3" class="stickyColumn" style="padding: 0px 25px;">Action</th>
                                            <th rowspan="3" class="stickyColumn" style="padding: 0px 25px;">Destination</th>
                                            <th rowspan="3" class="stickyColumn" style="padding: 0px 25px;">Process Code</th>

                                            @if (dynamicDaily != null)
                                            {
                                                <th colspan="@dynamicDaily.Count">@dynamicDaily[0].Month</th>
                                                <tr>
                                                    @for (int k = 0; k < dynamicDaily.Count; k++)
                                                    {
                                                        <th>@dynamicDaily[k].Day</th>
                                                    }
                                                </tr>
                                                <tr>
                                                    @for (int j = 0; j < dynamicDaily.Count; j++)
                                                    {
                                                        <th style="padding: 3px 10px;">@dynamicDaily[j].WeekDay</th>
                                                    }
                                                </tr>
                                             }
                                             else
                                             {
                                                <th colspan="30">Month</th>
                                                <tr>
                                                    @for (int i = 1; i <= 30; i++)
                                                    {
                                                        <th style="width:100px;">
                                                            @i
                                                        </th>
                                                    }
                                                </tr>
                                                <tr>
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i == 5)
                                                        {
                                                            <th>Mon</th>
                                                            <th>Tue</th>
                                                        }
                                                        else
                                                        {
                                                            <th>Mon</th>
                                                            <th>Tue</th>
                                                            <th>Wed</th>
                                                            <th>Thu</th>
                                                            <th>Fri</th>
                                                            <th>Sat</th>
                                                            <th>Sun</th>
                                                        }
                                                    }
                                                </tr>
                                             }                                            
                                        </thead>
                                    <tbody>

                                        @if (listData.Count > 0)
                                        {
                                            foreach (DayByDayDeliveryPackingCoeficient data in listData)
                                            {
                                                <tr align="center">
                                                    <td class="text-center grid-checkbox-col stickyColumn">
                                                        <input name="chkRow" type="checkbox" class="grid-checkbox-body"
                                                               data-companyCd="@data.COMPANY_CD" data-processCd="@data.PROCESS_CD" data-destCd="@data.DEST_CD" data-yymm="@data.YYMM" />
                                                        <span class="lbl"></span>
                                                    </td>
                                                    <td class="stickyColumn">
                                                        <button class="btn initialBtn btn-md btn-outline-primary pt-0 pb-0 pl-1 pr-1" title="Edit" id="editLine">
                                                            <small><i class="fa fa-pen"></i></small>
                                                        </button>
                                                        <button class="btn initialBtn btn-md btn-outline-info pt-0 pb-0 pl-1 pr-1" title="Copy Line" id="copyLine">
                                                            <small><i class="fa fa-copy"></i></small>
                                                        </button>
                                                        <button class="btn initialBtn btn-md btn-outline-warning pt-0 pb-0 pl-1 pr-1" title="Delete"
                                                                onclick="onDeleteSingle('@data.PROCESS_CD', '@data.COMPANY_CD', '@data.DEST_CD', '@data.YYMM')">
                                                            <small><i class="fa fa-trash"></i></small>
                                                        </button>
                                                    </td>
                                                    <td class="stickyColumn text-center">@data.DEST_CD</td>
                                                    <td class="stickyColumn">@data.PROCESS_CD</td>

                                                    @for (int i = 0; i < data.DAILYRATIOLIST.Count; i++)
                                                    {
                                                        <td>@data.DAILYRATIOLIST[i].VALUE</td>
                                                    }

                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="@(dynamicDaily != null ? 4 + dynamicDaily.Count : 34)"> No Data Found</td>
                                            </tr>
                                            <tr id="noDataFound" style="display: none;">
                                                <td class="text-center grid-checkbox-col stickyColumn" style="left: -1px;">
                                                    <input name="chkRow" type="checkbox" class="grid-checkbox-body" disabled />
                                                    <span class="lbl"></span>
                                                </td>
                                                <td class="stickyColumn">
                                                    <button class="btn btn-md btn-primary pt-0 pb-0 pl-1 pr-1" id="btnSave" title="Save">
                                                        <small><i class="fa fa-save"></i></small>
                                                    </button>
                                                    <button class="btn btn-md btn-danger pt-0 pb-0 pl-1 pr-1" id="cancelSubmit" title="Cancel">
                                                        <small><i class="fa fa-times"></i></small>
                                                    </button>
                                                </td>
                                                <td class="stickyColumn text-center">
                                                    <input type="text" class="form-control" id="" name="" value="" />
                                                </td>
                                                <td class="stickyColumn">
                                                    <input type="text" class="form-control" id="" name="" value="" />
                                                </td>

                                                @if (dynamicDaily != null)
                                                {
                                                    for (int i = 0; i < dynamicDaily.Count; i++)
                                                    {
                                                        <td>
                                                            <input type="text" class="form-control" id="" name="" value="" />
                                                        </td>
                                                    }
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row text-right">
                    <div class="col-md-12">
                        <div class="form-group-sm">
                            @Html.Partial("_UIPaging", page)
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>