@using System;
@using Toyota.Common.Web.Platform;
@using GPPSU.Controllers;
@using GPPSU.Commons.Constants;
@using GPPSU.Models.DeliveryPackingPartsNoM_PxP;

@using GPPSU.Models.Common;
@{
    PagingModel page = ViewData["Paging"] != null ? (PagingModel)ViewData["Paging"] : new PagingModel(0, 1, 10);

    List<DeliveryPackingPartsNoM_PxP> listData = (List<DeliveryPackingPartsNoM_PxP>)ViewData["DelPartData"] != null ? (List<DeliveryPackingPartsNoM_PxP>)ViewData["DelPartData"] : new List<DeliveryPackingPartsNoM_PxP>();

}


<script type="text/javascript">
    $(document).ready(function () {
        $("#checkall").click(function () {
            $(".grid-checkbox").prop("checked", $("#checkall").is(":checked"));
        });

        $(".grid-checkbox").click(function () {
            $("#checkall").prop("checked", $('.grid-checkbox:not(#checkall)').not(':checked').length == 0);
        });
    });
</script>


<div class="customContainer" style="margin-top: -10px;">
    <div class="col-md-12">
        <div class="card customShadow">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6 col-6 col-sm-6">
                        <button id="btnUpload" type="button" class="btn btn-info initialBtn ">Upload</button>
                        <button type="button" id="btn-download" class="btn btn-primary initialBtn" onclick="onDownload()">Download</button>
                    </div>
                    <div class="col-md-6 col-6 col-sm-6 text-right">
                        <button class="btn btn-md btn-primary initialBtn" id="insertLine">Add</button>
                        <button class="btn btn-danger initialBtn" id="btnDelDtl">Delete</button>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-12">
                        <div class="table-responsive customTableBorder">
                            <div class="tableScroll" id="tScrollHead">
                                <table class="customTable text-center" id="tblDetail" width="100%">
                                    <thead>
                                        <tr>
                                            <th class="pl-3 pr-3">
                                                <input class="grid-checkboxDetail ace initialBtn" type="checkbox" id="checkall" />
                                                <span class="lbl" title="Choose"></span>
                                            </th>
                                            <th>Action</th>
                                            <th>Destination Code</th>
                                            <th>Car Family Code</th>
                                            <th style="width:200px;">Parts No</th>
                                            <th>Status Code</th>
                                            <th>Proc Code</th>
                                            <th>Parts Name</th>
                                            <th>Order Lot Size</th>
                                            <th>Selective Matching Ratio</th>
                                            <th>T/C (From)</th>
                                            <th>T/C (To)</th>
                                            <th>Created By</th>
                                            <th>Created Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (listData == null || listData.Count == 0)
                                        {
                                            <tr>
                                                <td colspan="14">No Data Found</td>
                                            </tr>
                                        }
                                        else
                                        {
                                            foreach (DeliveryPackingPartsNoM_PxP data in listData)
                                            {
                                                <tr>
                                                    <td class="text-center grid-checkbox-col">
                                                        <input name="chkRow" type="checkbox"class="grid-checkbox ace grid-checkbox-body initialBtn"
                                                               data-destinationCd="@data.DEST_CD" data-companyCd="@data.COMPANY_CD" data-PartNo="@data.PART_NO" />
                                                        <span class="lbl"></span>
                                                    </td>
                                                    <td>
                                                        <button class="btn initialBtn btn-md btn-outline-primary pt-0 pb-0 pl-1 pr-1" title="Edit" id="editLine">
                                                            <small><i class="fa fa-pen"></i></small>
                                                        </button>
                                                        <button class="btn initialBtn btn-md btn-outline-info pt-0 pb-0 pl-1 pr-1" title="Copy Line" id="copyLine">
                                                            <small><i class="fa fa-copy"></i></small>
                                                        </button>
                                                        <button class="btn initialBtn btn-md btn-outline-warning pt-0 pb-0 pl-1 pr-1" title="Delete"
                                                                onclick="onDeleteSingle('@data.DEST_CD', '@data.COMPANY_CD', '@data.PART_NO')">
                                                            <small><i class="fa fa-trash"></i></small>
                                                        </button>
                                                    </td>
                                                    <td id="cmbDestinationCd">@data.DEST_CD</td>
                                                    <td id="textCFC">@data.CFC</td>
                                                    <td id="txtPartNo" style="width:200px;">@data.PART_NO_ONE-@data.PART_NO_TWO-@data.PART_NO_THREE</td>

                                                    <td id="txtStatusCd">@data.STATUS_CD</td>
                                                    <td id="txtProcessCd">@data.PROCESS_CD</td>
                                                    <td id="txtPartName">@data.PART_NAME</td>
                                                    <td id="txtLOTSize">@data.LOT_SIZE</td>
                                                    <td id="txtSel">@data.SEL_MATCH_RATIO</td>
                                                    <td id="tdTCFrom">@data.TC_FROM</td>
                                                    <td id="tdTcTo">@data.TC_TO</td>
                                                    <td>@data.CREATED_BY</td>
                                                    <td>@data.CREATED_DT</td>

                                                    <td hidden>@data.COMPANY_CD</td>
                                                    <td hidden>@data.SEQ_NO</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row text-right">
                    <div class="col-md-12">
                        <div class="form-group-sm">
                            @Html.Partial("_UIPaging", page)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $("#tScrollBody").scroll(function () {
        $("#tScrollHead").scrollLeft($("#tScrollBody").scrollLeft());
    });
</script>