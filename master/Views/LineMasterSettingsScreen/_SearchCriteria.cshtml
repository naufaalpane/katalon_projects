<div class="row customContainer mt-4">
    <div class="col-md-12">
        <div class="card customShadow">
            <div class="card-header pb-1">
                <div class="row">
                    <div class="col-md-9">
                        <h3 class="card-title">
                            <i class="fas fa-search"></i>
                            Search Criteria
                        </h3>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group-sm">
                            <h5 class="text-right"><span class="badge companyCd">Company : <span id="comcd">112B</span></span></h5>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-inline">
                            <div class="form-group">
                                <label for="proccd" class="font-weight-bolder ml-2">PROCESS :</label>
                                <select class="form-control ml-2" id="proccd" style="width: 90px;">
                                    <option value=""> Choose</option>
                                    <option value="k">K</option>
                                    <option value="m">M</option>
                                </select>
                            </div>
                            <div class="form-group ml-3">
                                <label for="linecd" class="font-weight-bolder">Line Code :</label>
                                <input type="text" id="linecd" name="" class="form-control ml-2" maxlength="6" style="width: 70px" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 text-right pr-2">
                        <div class="form-group-sm pr-1">
                            <button class="btn btn-md btn-default initialBtn" id="btn_clear" onclick="onClear()">Clear</button>
                            <button class="btn btn-md btn-info initialBtn" id="btn_search" onclick="doSearch(1)">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>