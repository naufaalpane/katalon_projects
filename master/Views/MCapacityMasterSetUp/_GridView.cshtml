@using System;
@using Toyota.Common.Web.Platform;
@using GPPSU.Models.Common;
@using GPPSU.Controllers;
@using GPPSU.Commons.Constants;
@using GPPSU.Models.MCapacityMasterSetUp;

@{
    PagingModel page = ViewData["Paging"] != null ? (PagingModel)ViewData["Paging"] : new PagingModel(0, 1, 10);
    List<MCapacityMasterSetUp> MData = (List<MCapacityMasterSetUp>)ViewData["Detail"] != null ? (List<MCapacityMasterSetUp>)ViewData["Detail"] : new List<MCapacityMasterSetUp>();
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#checkall").click(function () {
            $(".grid-checkbox").prop("checked", $("#checkall").is(":checked"));
        });

        $(".grid-checkbox").click(function () {
            $("#checkall").prop("checked", $('.grid-checkbox:not(#checkall)').not(':checked').length == 0);
        });
    });
</script>

<div class="customContainer" style="margin-top: -10px;">
    <div class="col-md-12">
        <div class="card customShadow">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-3">
                        <button id="btnUpload" type="button" class="btn btn-info">Upload</button>
                        <button type="button" id="btn-download" class="btn btn-primary" onclick="onDownload()">Download</button>
                    </div>
                    <div class="col-md-9 text-right">
                        <button class="btn btn-md btn-primary initialBtn" id="insertLine">Add</button>
                        <button class="btn btn-danger initialBtn" id="btnDelDtl">Delete</button>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-12">
                        <div class="table-responsive customTableBorder">
                            <div class="tableScroll">
                                <table class="customTable text-center" id="tblDetail" width="100%">
                                    <thead>
                                        <tr>
                                            <th class="grid-checkbox-col" style="width: 40px;">
                                                <input class="grid-checkboxDetail ace initialBtn" type="checkbox" id="checkall" />
                                                <span class="lbl" title="Choose"></span>
                                            </th>
                                            <th>Action</th>
                                            <th>Process Code</th>
                                            <th>Line Code</th>
                                            <th>Summary HEIJUNKA Code</th>
                                            <th>Capacity / Day</th>
                                            <th>T/C (from)</th>
                                            <th>T/C (to)</th>
                                            <th>Created By</th>
                                            <th>Created Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (MData == null || MData.Count == 0)
                                        {
                                            <tr>
                                                <td colspan="11">No Data Found</td>
                                            </tr>
                                        }
                                        else
                                        {
                                            foreach (MCapacityMasterSetUp data in MData)
                                            {
                                            <tr>
                                                <td class="text-center grid-checkbox-col">
                                                    <input name="chkRow" type="checkbox" class="grid-checkbox-body" value="@data.SEQ_NO"
                                                           data-lineCd="@data.LINE_CD" data-companyCd="@data.COMPANY_CD" data-SeqNo="@data.SEQ_NO" />
                                                    <span class="lbl"></span>
                                                </td>
                                                <td>
                                                    <button class="btn initialBtn btn-md btn-outline-primary pt-0 pb-0 pl-1 pr-1" title="Edit" id="editLine" data-SeqNo="@data.SEQ_NO" >
                                                        <small><i class="fa fa-pen"></i></small>
                                                    </button>
                                                    <button class="btn initialBtn btn-md btn-outline-info pt-0 pb-0 pl-1 pr-1" title="Copy Line" id="copyLine">
                                                        <small><i class="fa fa-copy"></i></small>
                                                    </button>
                                                    <button class="btn initialBtn btn-md btn-outline-warning pt-0 pb-0 pl-1 pr-1" title="Delete"
                                                            onclick="onDeleteSingle('@data.LINE_CD','@data.COMPANY_CD','@data.SEQ_NO')">
                                                        <small><i class="fa fa-trash"></i></small>
                                                    </button>
                                                </td>
                                                <td id="ProccesCd">@data.PROCESS_CD</td>
                                                <td id="LineCd">@data.LINE_CD</td>
                                                <td id="HeijunkaCd">@data.HEIJUNKA_CD</td>
                                                <td id="CapacityCd">@data.CAPACITY</td>
                                                <td id="TcFrom">@data.TC_FROM</td>
                                                <td id="TcTo">@data.TC_TO</td>
                                                <td>@data.CREATED_BY</td>
                                                <td>@data.CREATED_DT</td>
                                            </tr>
                                            }
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row text-right">
                    <div class="col-md-12">
                        <div class="form-group-sm">
                            @Html.Partial("_UIPaging", page)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>