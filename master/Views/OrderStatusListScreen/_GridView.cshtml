@using GPPSU.Models.Common;
@using System;
@using Toyota.Common.Web.Platform;
@using GPPSU.Controllers;
@using GPPSU.Commons.Constants;
@using GPPSU.Models.OrderStatusListScreen;



@{
    PagingModel page = ViewData["Paging"] != null ? (PagingModel)ViewData["Paging"] : new PagingModel(0, 1, 10);

    List<OrderStatusListScreen> listData = (List<OrderStatusListScreen>)ViewData["orderStatusListData"] != null ? (List<OrderStatusListScreen>)ViewData["orderStatusListData"] : new List<OrderStatusListScreen>();
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#checkall").click(function () {
            $(".grid-checkbox").prop("checked", $("#checkall").is(":checked"));
        });

        $(".grid-checkbox").click(function () {
            $("#checkall").prop("checked", $('.grid-checkbox:not(#checkall)').not(':checked').length == 0);
        });
    });
</script>

<div class="customContainer" style="margin-top: -10px;">
    <div class="col-md-12">
        <div class="card customShadow">
            <div class="preload">
                @*<div class="spinnerDisplay"></div>*@
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-12 text-right">

                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-12">
                        <div class="table-responsive customTableBorder">
                            <div class="tableScroll" id="tScrollHead">
                                <table class="customTable text-center" id="tblDetail" width="100%">
                                    <thead>
                                        <tr>
                                            <th rowspan="2" class="stickyColumn">Status Code</th>
                                            <th rowspan="2" class="stickyColumn">Destination</th>
                                            <th rowspan="2" class="stickyColumn">Dest Code</th>
                                            <th rowspan="2" class="stickyColumn">ODT</th>
                                            <th rowspan="2" class="stickyColumn">Version</th>
                                            <th rowspan="2" class="stickyColumn">Car Family Code</th>
                                            <th rowspan="2" class="stickyColumn">Prev Sys. Code</th>
                                            <th rowspan="2" class="stickyColumn">Del/Pack Month</th>
                                            <th colspan="2">Recieve</th>
                                            <th colspan="6">Status</th>
                                            <th colspan="3">Last Update</th>
                                        </tr>
                                        <tr>
                                            <th>Date</th>
                                            <th>Time</th>
                                            <th>Order Recieve</th>
                                            <th>Order Check</th>
                                            <th>Order Difference</th>
                                            <th>Day By Day Explotion</th>
                                            <th>K Del/Pack Plan</th>
                                            <th>M Del/Pack Plan</th>
                                            <th>User Name</th>
                                            <th>Date</th>
                                            <th>Time</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @if (listData.Count < 1)
                                        {
                                            <tr>
                                                <td colspan="27" class="text-center"> No Data Found</td>

                                            </tr>

                                        }
                                        else
                                        {
                                            foreach (OrderStatusListScreen data in listData)
                                            {
                                            <tr>
                                                <td class="stickyColumn"> @data.STATUS_CD</td>
                                                <td class="stickyColumn">@data.DEST_NAME </td>
                                                <td class="stickyColumn">@data.DEST_CODE </td>
                                                <td class="stickyColumn">@data.ORD_TYPE </td>
                                                <td class="stickyColumn">@data.VERSION </td>
                                                <td class="stickyColumn">@data.CFC </td>
                                                <td class="stickyColumn">@data.TOOL_CD </td>
                                                <td class="stickyColumn">@data.PACK_MONTH </td>
                                                <td>@data.RECEIVE_DATE </td>
                                                <td>@data.RECEIVE_TIME </td>
                                                <td>@data.RECEIVE_STAT </td>
                                                <td>@data.CHECK_STAT </td>
                                                <td>@data.DIFF_LIST_STAT </td>
                                                <td>@data.DAY_BY_DAY_STAT </td>
                                                <td>@data.K_PACK_CREATE_STAT </td>
                                                <td>@data.M_PACK_CREATE_STAT</td>
                                                <td>@data.CREATED_BY </td>
                                                <td>@data.LAST_UPDATE_DATE </td>
                                                <td>@data.LAST_UPDATE_TIME </td>

                                            </tr>

                                            }
                                        }
                                       
                                    </tbody>
                                    </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row text-right">
                    <div class="col-md-12">
                        <div class="form-group-sm">
                            @Html.Partial("_UIPaging", page)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $("#tScrollBody").scroll(function () {
        $("#tScrollHead").scrollLeft($("#tScrollBody").scrollLeft());
    });
</script>