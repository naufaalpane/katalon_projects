<div class="row customContainer mt-4">
    <div class="col-md-12">
        <div class="card customShadow">
            <div class="card-header pb-1">
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="card-title">
                            Production Plan Modification
                        </h3>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group-sm">
                            <h5 class="text-right"><span class="badge companyCd">Company : <span id="comcd">112B</span></span></h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-inline">
                            <div class="form-group">
                                <label for="proc" class="font-weight-bolder ml-2">PROCESS :</label>
                                <select class="form-control ml-2" id="proccd" style="width: 85px;">
                                    <option value="">Choose</option>
                                    <option value="k">K</option>
                                    <option value="m">M</option>
                                </select>

                                <label for="heiju" class="font-weight-bolder ml-2">Disp Sum HEIJU CD :</label>
                                <input type="checkbox" id="heiju" class="form-control ml-2" />

                                <div class="input-group col" id="MonthDatePicker">
                                    <label for="year" class="font-weight-bolder ml-2">Year Month :</label>
                                    <input type="text" id="year" class="form-control _datepicker ml-2" style="width: 65px;" placeholder="YYYYMM" />
                                    <div class="input-group-append">
                                        <span class="input-group-text">
                                            <i class="far fa-calendar-alt"></i>
                                        </span>
                                    </div>
                                </div>

                                <label for="line" class="font-weight-bolder ml-2">Line CD :</label>
                                <input type="text" id="line" class="form-control ml-2" style="width: 65px;" placeholder="" />

                                <label for="partsno" class="font-weight-bolder ml-2">Parts No. :</label>
                                <input type="text" name="partsno" class="form-control ml-1" maxlength="5" style="width: 55px;">
                                <strong class="ml-1"><b>-</b></strong>
                                <input type="text" name="partsno" class="form-control ml-1" maxlength="5" style="width: 55px;">
                                <strong class="ml-1"><b>-</b></strong>
                                <input type="text" name="partsno" class="form-control ml-1" maxlength="2" style="width: 30px;">

                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-9">
                        <div class="form-inline">
                            <div class="form-group">
                                <label for="statuscd" class="font-weight-bolder ml-2">StatusCd &nbsp; :</label>
                                <select class="form-control ml-2" style="width: 150px;" id="statuscd">
                                    <option selected>Choose...</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>

                                <label for="cfc" class="font-weight-bolder ml-3"> Car Family Code :</label>
                                <input type="text" id="cfc" class="form-control ml-2" style="width: 45px;" placeholder="" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 text-right">
                        <div class="form-group-sm">
                            <button class="btn btn-md btn-default initialBtn">Clear</button>
                            <button class="btn btn-md btn-info initialBtn">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>