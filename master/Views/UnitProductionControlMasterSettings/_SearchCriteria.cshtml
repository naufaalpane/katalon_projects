<div class="row customContainer mt-4">
    <div class="col-md-12">
        <div class="card customShadow">
            <div class="card-header pb-1">
                <div class="row">
                    <div class="col-md-9">
                        <h3 class="card-title">
                            <i class="fas fa-search"></i>
                            Search Criteria
                        </h3>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group-sm">
                            <h5 class="text-right"><span class="badge companyCd">Company : <span id="comcd">112B</span></span></h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-10">
                        <form role="form" class="form-inline">
                            <div class="form-group pl-2">
                                <label for="cfc" class="font-weight-bolder">Car Family Code :</label>
                                <input type="text" id="cfc" name="" class="form-control ml-2" maxlength="4" style="width: 50px;"/>
                            </div>
                            <div class="form-group ml-4">
                                <label for="partsno" class="font-weight-bolder">Parts No. :</label>
                                <input type="text" name="partsno" id="partsno" class="form-control ml-1" maxlength="5" style="width: 60px"/>
                                <strong class="ml-1"><b>-</b></strong>
                                <input type="text" name="partsno" id="partsno2" class="form-control ml-1" maxlength="5" style="width: 60px" />
                                <strong class="ml-1"><b>-</b></strong>
                                <input type="text" name="partsno" id="partsno3" class="form-control ml-1" maxlength="2" style="width: 30px" />
                            </div>
                            <div class="form-group ml-4">
                                <label for="linecd" class="font-weight-bolder">Line Code :</label>
                                <input type="text" id="linecd" name="" class="form-control ml-2" maxlength="6"  style="width: 50px"/>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-2 pr-2">
                        <div class="form-group-sm pr-1">
                            <div class="text-right">
                                <button class="btn btn-md btn-default initialBtn" onclick="doClear()">Clear</button>
                                <button class="btn btn-md btn-info initialBtn" onclick="doSearch(1)">Search</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>