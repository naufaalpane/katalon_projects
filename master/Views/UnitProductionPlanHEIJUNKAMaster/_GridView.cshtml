@using System;
@using Toyota.Common.Web.Platform;
@using GPPSU.Controllers;
@using GPPSU.Commons.Constants;
@using GPPSU.Models.UnitProductionPlanHEIJUNKAMaster;

@using GPPSU.Models.Common;
@{
    PagingModel page = ViewData["Paging"] != null ? (PagingModel)ViewData["Paging"] : new PagingModel(0, 1, 10);
    char a = (char)64;

    List<UnitProductionPlanHEIJUNKAMaster> listData = (List<UnitProductionPlanHEIJUNKAMaster>)ViewData["listUnitProdPlanHeijunka"];
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#checkall").click(function () {
            $(".grid-checkbox").prop("checked", $("#checkall").is(":checked"));
        });

        $(".grid-checkbox").click(function () {
            $("#checkall").prop("checked", $('.grid-checkbox:not(#checkall)').not(':checked').length == 0);
        });
    });
</script>

<div class="customContainer" style="margin-top: -10px;">
    <div class="col-md-12">
        <div class="card customShadow">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-3">
                        <button id="btnUpload" type="button" class="btn btn-info initialBtn">Upload</button>
                        <button type="button" id="btn-download" class="btn btn-primary initialBtn" onclick="onDownload()">Download</button>
                    </div>
                    <div class="col-md-9 text-right">
                        <button class="btn btn-md btn-primary initialBtn" id="insertLine">Add</button>
                        <button type="button" id="btn-delete" class="btn btn-danger initialBtn" onclick="onDelete()">Delete</button>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-12">
                        <div class="table-responsive customTableBorder">
                            <div class="tableScroll">
                                <table class="customTable text-center" id="tblDetail" width="100%">
                                    <thead>
                                        <tr>
                                            <th class="pl-3 pr-3">
                                                <input class="grid-checkboxDetail ace initialBtn" type="checkbox" id="checkall" />
                                                <span class="lbl" title="Choose"></span>
                                            </th>
                                            <th>Action</th>
                                            <th>Line Code</th>
                                            <th>Car Family Code</th>
                                            <th>HEIJUNKA Code</th>
                                            <th>Summary Sign </th>
                                            <th>Parts No.</th>
                                            <th>Created By</th>
                                            <th>Created Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (listData.Count < 1)
                                        {
                                            <tr>
                                                <td colspan="9" class="text-center"> No Data Found</td>
                                            </tr>
                                        }
                                        else
                                        {
                                            foreach (UnitProductionPlanHEIJUNKAMaster data in listData)
                                            {

                                    <tr>
                                        @{
                                            a++;
                                        }
                                        <td>
                                            <input name="chkRow" type="checkbox" class="grid-checkbox ace grid-checkbox-body initialBtn" value="" data-lineCd="@data.LINE_CD" data-companyCd="@data.COMPANY_CD" data-cfc="@data.CFC" data-heijunkaCd="@data.HEIJUNKA_CD" data-PartNo="@data.PART_NO" />
                                            <span class="lbl"></span>
                                        </td>
                                        <td>
                                            <button class="btn initialBtn btn-md btn-outline-primary pt-0 pb-0 pl-1 pr-1" title="Edit" id="editLine" data-lineCd="@data.LINE_CD" data-companyCd="@data.COMPANY_CD" data-cfc="@data.CFC" data-heijunkaCd="@data.HEIJUNKA_CD" data-PartNo="@data.PART_NO" data-PartNo1="@data.PART_NO1" data-PartNo2="@data.PART_NO2" data-PartNo3="@data.PART_NO3">
                                                <small><i class="fa fa-pen"></i></small>
                                            </button>
                                            <button class="btn initialBtn btn-md btn-outline-info pt-0 pb-0 pl-1 pr-1" title="Copy Line" id="copyLine" data-PartNo1="@data.PART_NO1" data-PartNo2="@data.PART_NO2" data-PartNo3="@data.PART_NO3">
                                                <small><i class="fa fa-copy"></i></small>
                                            </button>
                                            <button class="btn initialBtn btn-md btn-outline-warning pt-0 pb-0 pl-1 pr-1" title="Delete" onclick="onDeleteSingle('@data.LINE_CD','@data.COMPANY_CD','@data.PART_NO','@data.CFC','@data.HEIJUNKA_CD')" id="deleteLine">
                                                <small><i class="fa fa-trash"></i></small>
                                            </button>
                                        </td>
                                        <td> @data.LINE_CD</td>
                                        <td> @data.CFC</td>
                                        <td> @data.HEIJUNKA_CD</td>
                                        <td> @data.SUM_SIGN</td>
                                        <td> @data.PART_NO1-@data.PART_NO2-@data.PART_NO3</td>
                                        <td> @data.CREATED_BY </td>
                                        <td> @data.CREATED_DT </td>
                                    </tr>
                                            }

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row text-right">
                    <div class="col-md-12">
                        <div class="form-group-sm">
                            @Html.Partial("_UIPaging", page)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $("#tScrollBody").scroll(function () {
        $("#tScrollHead").scrollLeft($("#tScrollBody").scrollLeft());
    });
</script>
