<div class="row customContainer mt-4">
    <div class="col-md-12">
        <div class="card customShadow">
            <div class="card-header pb-1">
                <div class="row">
                    <div class="col-md-9">
                        <h3 class="card-title">
                            <i class="fas fa-search"></i>
                            Search Criteria
                        </h3>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group-sm">
                            <h5 class="text-right"><span class="badge companyCd">Company : <span id="comcd">112B</span></span></h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <form role="form" class="form-inline">
                            <div class="form-group ml-3">
                                <label for="linecd" class="font-weight-bolder">Line Code :</label>
                                <input type="text" id="txtSearchLineCd" name="" class="form-control ml-2" maxlength="6" style="width: 70px" />
                            </div>
                            <div class="form-group ml-3">
                                <label for="cfc" class="font-weight-bolder">Car Family Code :</label>
                                <input type="text" id="txtSearchCFC" name="" class="form-control ml-2" maxlength="4" style="width: 50px;" />
                            </div>
                            <div class="form-group ml-3">
                                <label for="hjkcd" class="font-weight-bolder">HEIJUNKA Code :</label>
                                <input type="text" id="txtSearchHeijunkaCd" name="" class="form-control ml-2" maxlength="4" style="width: 50px;" />
                            </div>
                        </form>
                    </div>
                    <div class="col-md-4 text-right">
                        <div class="form-group-sm">
                            <button class="btn btn-md btn-default initialBtn" id="btn_clear" onclick="onClear()">Clear</button>
                            <button class="btn btn-md btn-info initialBtn" id="btn_search" onclick="doSearch(1)">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
