<div class="row customContainer mt-4">
    <div class="col-md-12">
        <div class="card customShadow">
            <div class="card-header pb-1">
                <div class="row">
                    <div class="col-md-9">
                        <h3 class="card-title">
                            <i class="fas fa-search"></i>
                            Search Criteria
                        </h3>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group-sm">
                            <h5 class="text-right"><span class="badge companyCd">Company : <span id="comcd">112B</span></span></h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-inline">
                            <div class="form-group pl-2">
                                <label for="statuscd" class="font-weight-bolder ml-2">PROCESS :</label>
                                <select class="form-control ml-2" id="proccd" style="width: 65px;">
                                    <option value=""> Choose</option>
                                    <option value="k">K</option>
                                    <option value="m">M</option>
                                </select>
                            </div>
                            <div class="form-group ml-4">
                                <label for="linecd" class="font-weight-bolder">Line Code :</label>
                                <input type="text" id="linecd" name="" class="form-control ml-2" maxlength="4" style="width: 50px" />
                            </div>
                            <div class="form-group ml-4">
                                <label for="hjkcd" class="font-weight-bolder">Summary HEIJUNKA Code  :</label>
                                <input type="text" id="hjkcd" name="" class="form-control ml-2" maxlength="4" style="width: 50px" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group-sm">
                            <div class="text-right">
                                <button class="btn btn-md btn-default initialBtn">Clear</button>
                                <button class="btn btn-md btn-info initialBtn"onclick="onSearch()">Search</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>