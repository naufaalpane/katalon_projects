<div class="row customContainer mt-4">
    <div class="col-md-12">
        <div class="card customShadow">
            <div class="card-header pb-1">
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="card-title">
                            Batch Status Monitor
                        </h3>
                    </div>
                    <div class="col-md-6 text-right">
                        <div class="form-group-sm">
                            <h5 class="text-right"><span class="badge companyCd">Company : <span id="comcd">112B</span></span></h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="preload">
                <div class="spinnerDisplay"></div>
            </div>
            <div class="card-body sk-loading">
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive customTableBorder">
                            <div class="tableScroll" style="max-height: 450px !important;">
                                <table class="customTable text-center" id="tblDetail" width="100%">
                                    <thead>
                                        <tr>
                                            <th class="stickyColumn pt-3 pb-3">Line Code</th>
                                            <th class="stickyColumn pt-3 pb-3">No.</th>
                                            <th class="stickyColumn pt-3 pb-3">Batch.</th>
                                            <th class="stickyColumn pt-3 pb-3">Status</th>
                                            <th class="stickyColumn pt-3 pb-3">Start</th>
                                            <th class="stickyColumn pt-3 pb-3">End</th>
                                            <th>Output 1</th>
                                            <th>Output 1 Records</th>
                                            <th>Output 2</th>
                                            <th>Output 2 Records</th>
                                            <th>Output 3</th>
                                            <th>Output 3 Records</th>
                                            <th>Output 4</th>
                                            <th>Output 4 Records</th>
                                            <th>Output 5</th>
                                            <th>Output 5 Records</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 1; i <= 100; i++)
                                        {
                                            <tr>
                                                <td class="stickyColumn"> XXXXXXXX </td>
                                                <td class="stickyColumn"> @i XX </td>
                                                <td class="stickyColumn"> XXXXXXXXXX </td>
                                                <td class="stickyColumn"> XX </td>
                                                <td class="stickyColumn"> DD/MM/YYYY HH:MM:DD </td>
                                                <td class="stickyColumn"> DD/MM/YYYY HH:MM:DD </td>
                                                <td> XXXXXXXXXX</td>
                                                <td> 01 @i</td>
                                                <td> XXXXXXXXXX</td>
                                                <td> 02 @i</td>
                                                <td> XXXXXXXXXX</td>
                                                <td> 03 @i</td>
                                                <td> XXXXXXXXXX</td>
                                                <td> 04 @i</td>
                                                <td> XXXXXXXXXX</td>
                                                <td> 05 @i</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-12 text-right">
                        <div class="form-group-sm">
                            <button class="btn btn-md btn-info btn-std initialBtn">Refresh</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>