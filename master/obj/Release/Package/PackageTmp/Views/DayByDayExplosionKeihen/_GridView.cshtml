@{
    Page.Title = "Title goes here";
}


<div class="row customContainer">
    <div class="col-md-6">
        <div class="card customShadow">
            <div class="card-body">
                <fieldset>
                    <legend><small><input type="radio" name="name" value="" id="monthly" /> <label for="monthly" style="margin: 0px;">Monthly</label></small></legend>
                    <div class="row ml-1">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-6">

                                    <div class="form-group row">
                                        <strong>Year :</strong>

                                        <div class="input-group col-md-8">
                                            <input type="text" placeholder="YYYY" class="form-control ml-2" value="" maxlength="4" />

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">

                                    <div class="form-group row">
                                        <strong>Month :</strong>

                                        <div class="input-group col-md-7">
                                            <input type="text" placeholder="MM" class="form-control ml-2" value="" maxlength="2"/>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row text-right">
                                <div class="col-md-12">
                                    <div class="form-group-sm">
                                        <button class="btn btn-md btn-default">Clear</button>
                                        <button class="btn btn-md btn-primary">Search</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="mt-2 row justify-content-center">
                        <div class="table-responsive" style="margin-bottom: 10px; border-radius: 7px 7px 0px 0px;">
                            <div class="tableScroll">
                                <table class="customTable text-center" width="100%">
                                    <thead>
                                        <tr>
                                            <th>Order Control No.</th>
                                            <th>Status Code</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 1; i <= 50; i++)
                                        {
                                            <tr>
                                                <td>Order Control No.</td>
                                                <td>Status Code</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card customShadow">
            <div class="card-body">
                <fieldset>
                    <legend><small><input type="radio" name="name" value="" id="keihen" /> <label for="keihen" style="margin: 0px;">Keihen</label></small></legend>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group md">
                                <button class="btn btn-md btn-primary">Search</button>
                            </div>
                        </div>
                    </div>
                    <div class="mt-2 row justify-content-center">
                        <div class="table-responsive" style="margin-bottom: 10px; border-radius: 7px 7px 0px 0px;">
                            <div class="tableScroll">
                                <table class="customTable text-center" width="100%">
                                    <thead>
                                        <tr class="text-center">
                                            <th>MT</th>
                                            <th>Order Control No.</th>
                                            <th>Status Code</th>
                                            <th>Start Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 1; i <= 50; i++)
                                        {
                                            <tr>
                                                <td>MT</td>
                                                <td>Order Control No.</td>
                                                <td>Status Code</td>
                                                <td>YYYYMMDD</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
</div>

<div class="row customContainer" style="margin-top: -10px;">
    <div class="col-12 col-sm-12 col-md-12">
        <div class="form-group-sm text-right">
            <button class="btn btn-primary" style="box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.15);">Execute</button>
        </div>
    </div>
</div>