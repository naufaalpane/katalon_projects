<div id="upload-modal" class="modal fade" data-backdrop="static">
    <div class="modal-dialog modal-xl" style="width: 600px">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h4 class="modal-title" id="popup-title">Spesial Partlist Maintenance Upload</h4>
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            </div>

            <div class="modal-body">
                <div id="modalMessagePanel"></div>
                <form role="form" class="form-horizontal" id="popup">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12 col-md-12">
                                <div class="form-group row">
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="stdSpecialPartlistInputFile">
                                            <label class="custom-file-label" for="stdSpecialPartlistInputFile">Choose file</label>
                                        </div>

                                    </div>
                                    <a href="#" onclick="javascript: doDownloadTemplate()">Download Template</a>
                                </div>
                            </div>
                        </div><!-- ./row -->
                    </div>
                </form>
            </div>

            <div class="modal-footer content-header">
                <button type="button" class="btn btn-danger btn-std" id="btnFormCancel" style="margin-right: 5px; width: 90px" onclick="javascript: doCancelUpload()">Cancel</button>
                <button type="submit" class="btn btn-primary btn-std" id="btnFormSave" style="margin-right: 5px; width: 90px" onclick="javascript: doUpload()">Upload</button>

            </div>

        </div>
    </div>
</div>

<script>
    $('#stdSpecialPartlistInputFile').on('change', function () {
        //get the file name
        var fileName = $(this).val();
        //replace the "Choose a file" label
        $(this).next('.custom-file-label').html(fileName);
    })
</script>
