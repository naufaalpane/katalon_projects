@{ 
    string path = "/Content/Bootstrap4/images/Login";
    DirectoryInfo dir;
    FileInfo[] files;

    dir = new DirectoryInfo(Server.MapPath("~"+path));
    files = dir.GetFiles();
    int i = 0;
    }

<div class="card-body">
	<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="200000">
		<!-- Indicators -->
		<ol class="carousel-indicators">
        @if (files != null)
        {
            foreach (FileInfo f in files)
            {
                if (i == 0)
                {
                    <li data-target="#carousel-login" data-slide-to="@i" class="active"></li>
                }
                else
                {
                    <li data-target="#carousel-login" data-slide-to="@i"></li> 
                }
                i = i + 1;
            }
        } 
		</ol>
	  
		<!-- Wrapper for slides -->
		<div class="carousel-inner">
        @if (files != null)
        {
            i=0;
            foreach (FileInfo f in files)
            {
                if (i == 0)
                {
                    <div class="carousel-item active">
                        <img src="@path/@f.Name.ToString()" alt="@f.Name.ToString()">
                        <div class="carousel-caption">@f.Name.ToString()</div>
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img src="@path/@f.Name.ToString()" alt="@f.Name.ToString()">
                        <div class="carousel-caption">@f.Name.ToString()</div>
                    </div>
                     
                }
                i = i + 1;
            }
        }  
		 
		</div>
	  
		<!-- Left and right controls -->
		<a class="carousel-control-prev" href="#myCarousel" data-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		  <span class="sr-only">Previous</span>
		</a>
		<a class="carousel-control-next" href="#myCarousel" data-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
		  <span class="sr-only">Next</span>
		</a>
	 </div>
</div>