<div class="row customContainer mt-4">
    <div class="col-md-7">
        <div class="card customShadow">
            <div class="card-header pb-1">
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="card-title">
                            K NQC Request instructions
                        </h3>
                    </div>
                    <div class="col-md-6 text-right">
                        <div class="form-group-sm">
                            <h5 class="text-right"><span class="badge companyCd">Company : <span id="comcd">112B</span></span></h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-inline">
                            <div class="form-group">
                                <label for="processcd" class="font-weight-bolder ml-2">PROCESS :</label>
                                <input type="text" name="processcd" class="form-control col-md-2 ml-2" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-9">
                        <div class="form-inline">
                            <div class="form-group">
                                <label for="cfc" class="font-weight-bolder ml-2 mr-3">NQC Start Month</label>
                            </div>
                            <div class="form-group" style="width: 100px;">
                                <label for="year" class="font-weight-bolder ml-2">Year :</label>
                                <input type="text" name="year" class="form-control ml-2 col-md-6" placeholder="YYYY" />
                            </div>
                            <div class="form-group" style="width: 110px;">
                                <label for="month" class="font-weight-bolder ml-2">Month :</label>
                                <input type="text" name="month" class="form-control ml-2 col-md-4" placeholder="MM" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 text-right">
                        <div class="form-group-sm pr-1">
                            <button type="button" id="btn-search" class="btn btn-info" onclick="onSearch()" style="padding-right: 23px;padding-left: 23px;">
                                <i class="fa fa-search"></i> Search
                            </button>
                        </div>
                    </div>
                </div><hr />
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div id="gridTableCourse">
                            @Html.Partial("_GridView")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>