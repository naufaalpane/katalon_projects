@using GPPSU.Models.Common;
@{
    PagingModel page = ViewData["Paging"] != null ? (PagingModel)ViewData["Paging"] : new PagingModel(0, 1, 10);
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#checkall").click(function () {
            $(".grid-checkbox").prop("checked", $("#checkall").is(":checked"));
        });

        $(".grid-checkbox").click(function () {
            $("#checkall").prop("checked", $('.grid-checkbox:not(#checkall)').not(':checked').length == 0);
        });
    });
</script>

<div class="customContainer" style="margin-top: -10px;">
    <div class="col-md-12">
        <div class="card customShadow">
            <div class="preload">
                <div class="spinnerDisplay"></div>
            </div>
            <div class="card-body sk-loading">
                <div class="row mb-3">
                    <div class="col-md-6 col-6 col-sm-6">
                        <button id="btnUpload" type="button" class="btn btn-info initialBtn">Upload</button>
                        <button type="button" id="btn-download" class="btn btn-primary initialBtn" onclick="onDownload()">Download</button>
                    </div>
                    <div class="col-md-6 col-6 col-sm-6 text-right">
                        <button class="btn btn-md btn-primary initialBtn" id="insertLine">Add</button>
                        <button type="button" id="btn-search" class="btn btn-danger initialBtn" tabindex="9">Delete</button>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-12">
                        <div class="table-responsive customTableBorder">
                            <div class="tableScroll">
                                <table class="customTable text-center" id="tblDetail" width="100%">
                                    <thead>
                                        <tr>
                                            <th rowspan="3" class="p-2 stickyColumn">
                                                <input class="grid-checkboxDetail ace initialBtn" type="checkbox" id="checkall" />
                                                <span class="lbl" title="Choose"></span>
                                            </th>
                                            <th rowspan="3" class="stickyColumn">Action</th>
                                            <th rowspan="3" class="stickyColumn">Parts No</th>
                                            <th rowspan="3" class="stickyColumn">ReExp</th>
                                            <th rowspan="3" class="stickyColumn">Order Lot Size</th>
                                            <th colspan="4" class="stickyColumn">Total</th>

                                            <th colspan="30">02</th>

                                        </tr>
                                        <tr>
                                            <th rowspan="2" class="stickyColumn">01</th>
                                            <th rowspan="2" class="stickyColumn">02</th>
                                            <th rowspan="2" class="stickyColumn">03</th>
                                            <th rowspan="2" class="stickyColumn">04</th>

                                            @for (int i = 1; i <= 30; i++)
                                            {
                                                <th style="width:100px;">
                                                    @i
                                                </th>
                                            }
                                        <tr>
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i == 5)
                                                {
                                                    <th>Mon</th>
                                                    <th>Tue</th>
                                                }
                                                else
                                                {
                                                    <th>Mon</th>
                                                    <th>Tue</th>
                                                    <th>Wed</th>
                                                    <th>Thu</th>
                                                    <th>Fri</th>
                                                    <th>Sat</th>
                                                    <th>Sun</th>
                                                }
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int j = 1; j <= 100; j++)
                                        {
                                            <tr align="center">
                                                <td class="text-center grid-checkbox-col stickyColumn">
                                                    <input name="chkRow" type="checkbox" class="grid-checkbox ace grid-checkbox-body initialBtn" />
                                                    <span class="lbl"></span>
                                                </td>
                                                <td class="stickyColumn">
                                                    <button class="btn initialBtn btn-md btn-outline-primary pt-0 pb-0 pl-1 pr-1" title="Edit" id="editLine">
                                                        <small><i class="fa fa-pen"></i></small>
                                                    </button>
                                                    <button class="btn initialBtn btn-md btn-outline-info pt-0 pb-0 pl-1 pr-1" title="Copy Line" id="copyLine">
                                                        <small><i class="fa fa-copy"></i></small>
                                                    </button>
                                                    <button class="btn initialBtn btn-md btn-outline-warning pt-0 pb-0 pl-1 pr-1" title="Delete">
                                                        <small><i class="fa fa-trash"></i></small>
                                                    </button>
                                                </td>
                                                <td align="left" class="stickyColumn">XXXXX-XXXXX-XX @j</td>
                                                <td class="stickyColumn">X @j</td>

                                                @for (int i = 1; i <= 35; i++)
                                                {
                                                    if (i <= 5)
                                                    {
                                                        <td class="stickyColumn">9999 @i </td>
                                                    }
                                                    else
                                                    {
                                                        <td>9999 @i </td>
                                                    }
                                                }
                                            </tr>

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row text-right">
                    <div class="col-md-8">
                        <div class="form-group-sm">
                            @Html.Partial("_UIPaging", page)
                        </div>
                    </div>
                    <div class="col-md-4 text-right pt-1">
                        <div class="form-group-sm">
                            <button type="button" id="btn-NMonth" class="btn btn-info pl-1 pr-1" onclick="onSearch()">N Month</button>
                            <button type="button" id="btn-N1Month" class="btn btn-info pl-1 pr-1" onclick="onN1Month()">N+1 Month</button>
                            <button type="button" id="btn-N2Month" class="btn btn-info pl-1 pr-1" onclick="onN2Month()">N+2 Month</button>
                            <button type="button" id="btn-N3Month" class="btn btn-info pl-1 pr-1" onclick="onN3Month()">N+3 Month</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>