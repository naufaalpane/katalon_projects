@using System;

@{

}
<div class="row customContainer mt-4">
    <div class="col-md-12">
        <div class="card customShadow">
            <div class="card-header pb-1">
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="card-title">
                            Order Update
                        </h3>
                    </div>
                    <div class="col-md-6 text-right">
                        <div class="form-group-sm">
                            <h5 class="text-right"><span class="badge companyCd">Company : <span id="comcd">112B</span></span></h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body" style="padding: 10px 16px;">
                <div class="row">
                    <div class="col-md-9 col-lg-10">
                        <div class="form-inline">
                            <div class="col-md-1"></div>
                            <div class="col-md-1">
                                <div class="form-group">
                                    <label for="importercd" class="font-weight-bolder ml-2">Imp</label>
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="form-group">
                                    <label for="exportercd" class="font-weight-bolder ml-2">Exp</label>
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="form-group">
                                    <label for="odt" class="font-weight-bolder ml-2">&emsp;ODT</label>
                                </div>
                            </div>
                            <div class="col-md-1" style="padding:0px;">
                                <div class="form-group">
                                    <label for="yearmonth" class="font-weight-bolder pl-3">YearMonth</label>
                                </div>
                            </div>
                            <div class="col-md-1" style="padding:0px;">
                                <div class="form-group">
                                    <label for="cfc" class="font-weight-bolder pl-3">CarFamily</label>
                                </div>
                            </div>
                            <div class="col-md-1" style="padding:0px;">
                                <div class="form-group">
                                    <label for="reexp" class="font-weight-bolder ml-3">&emsp;ReExp</label>
                                </div>
                            </div>
                            <div class="col-md-4"></div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-9 col-lg-10">
                        <form role="form" class="form-inline">
                            <div class="col-md-1">
                                <div class="form-group">
                                    <label for="importercd" class="font-weight-bolder ml-2">OCN : </label>
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="form-group">
                                    <input type="text" id="importercd" name="" class="form-control ml-2 col-md-12" maxlength="4"/>
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="form-group">
                                    <input type="text" id="exportercd" name="" class="form-control ml-2 col-md-12" maxlength="4"/>
                                </div>
                            </div>
                            <div class="col-md-1 pr-0">
                                <div class="form-group">
                                    <label for="" class="font-weight-bolder ml-2"><b>/</b></label>
                                    <input type="text" id="odt" name="" class="form-control ml-2 col-md-8" maxlength="1" placeholder="R/U"/>
                                </div>
                            </div>
                            <div class="col-md-1 ml-1" style="padding: 0px;">
                                <div class="form-group">
                                    <label for="" class="font-weight-bolder"><b>/</b></label>
                                    <input class="form-control month-picker ml-2 col-md-10" id="yearmonth" type="text" data-date-format="dd.mm.yyyy" data-name="yearmonth" />
                                </div>
                            </div>
                            <div class="col-md-1 ml-1" style="padding: 0px;">
                                <div class="form-group">
                                    <label for="" class="font-weight-bolder"><b>/</b></label>
                                    <input type="text" id="cfc" name="" class="form-control ml-2 col-md-10" maxlength="4"/>
                                </div>
                            </div>
                            <div class="col-md-1" style="padding: 0px;">
                                <div class="form-group">
                                    <label for="" class="font-weight-bolder ml-2"><b>/</b></label>
                                    <input type="text" id="reexp" name="" class="form-control ml-2 col-md-9 col-lg-8" maxlength="1"/>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="statuscd" class="font-weight-bolder ml-2">Status Code :</label>
                                    <select id="statuscd" class="form-control col-md-8 col-lg-7 ml-2">
                                            <option selected>--All--</option>
                                            <option value="0">0 - Trial</option>
                                            <option value="1">1 - Volume Production</option>
                                            <option value="2">2 - CPO</option>
                                            <option value="3">3 - Service Parts (Volume Production)</option>
                                            <option value="4">4 - Service Parts (Past)</option>\
                                    </select>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <hr/>
                <div class="row">
                    <div class="col-6 col-sm-6 col-md-6" style="">
                        <button type="button" id="btn-clear" class="btn btn-default">Clear</button>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <div class="form-group-sm">
                            <button class="btn btn-md btn-default initialBtn">Prev Month Copy</button>
                            <button class="btn btn-md btn-primary initialBtn">Create</button>
                            <button class="btn btn-md btn-info initialBtn">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>