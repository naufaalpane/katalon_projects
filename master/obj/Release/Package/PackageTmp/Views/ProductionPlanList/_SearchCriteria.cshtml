<div class="row customContainer mt-4">
    <div class="col-md-7">
        <div class="card customShadow">
            <div class="card-header pb-1">
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="card-title">
                            K Production Plan Summary List
                        </h3>
                    </div>
                    <div class="col-md-6 text-right">
                        <div class="form-group-sm">
                            <h5 class="text-right"><span class="badge companyCd">Company : <span id="comcd">112B</span></span></h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="form-group mb-0">
                            <label for="processcd" class="font-weight-bolder ml-2">Select Line</label>
                        </div>
                        <div id="gridTableCourse">
                            @Html.Partial("_GridView")
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-10">
                        <div class="form-inline">
                            <div class="col-md-2 pl-0 pr-0">
                                <div class="form-group">
                                    <label for="yearBefore" class="font-weight-bolder">Year :</label>
                                    <input type="text" id="yearBefore" class="form-control col-md-6 ml-1" maxlength="4" name="name" value="" placeholder="YYYY" />
                                </div>
                            </div>
                            <div class="col-md-2 pl-0 pr-0">
                                <div class="form-group">
                                    <label for="monthBefore" class="font-weight-bolder">Month :</label>
                                    <input type="text" id="monthBefore" class="form-control col-md-5 col-lg-4 ml-1" maxlength="2" name="name" value="" placeholder="MM" />
                                </div>
                            </div>
                            <div class="col-md-1 pl-0 pr-0">
                                <div class="form-group">
                                    <label for="yearBefore" class="font-weight-bolder" style="width: 100px"><b> - </b></label>
                                </div>
                            </div>
                            <div class="col-md-2 pl-0 pr-0">
                                <div class="form-group">
                                    <label for="yearAfter" class="font-weight-bolder">Year :</label>
                                    <input type="text" id="yearAfter" class="form-control col-md-6 ml-1" maxlength="4" name="name" value="" placeholder="YYYY" />
                                </div>
                            </div>
                            <div class="col-md-2 pl-0 pr-0">
                                <div class="form-group">
                                    <label for="monthAfter" class="font-weight-bolder">Month :</label>
                                    <input type="text" id="monthAfter" class="form-control col-md-5 col-lg-4 ml-2" maxlength="2" name="name" value="" placeholder="MM" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2 p-0">
                        <div class="form-group-sm text-right">
                            <button type="button" id="btn-search" class="btn btn-primary" tabindex="9">Print</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>