<div class="row customContainer mt-4">
    <div class="col-md-12">
        <div class="card customShadow">
            <div class="card-header pb-1">
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="card-title">
                            Monthly Delivery/Packing, Production and Stock Plan
                        </h3>
                    </div>
                    <div class="col-md-6 text-right">
                        <div class="form-group-sm">
                            <h5 class="text-right"><span class="badge companyCd">Company : <span id="comcd">112B</span></span></h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-inline">
                            <div class="form-group">
                                <label for="proc" class="font-weight-bolder ml-2"><span class="mandatory">*</span> PROCESS&emsp;:</label>
                                <select class="form-control ml-2" id="proccd" style="width: 45px;">
                                    <option value="k">K</option>
                                    <option value="m">M</option>
                                </select>

                                
                                <div class="input-group col-7 col-sm-7 col-md-3">
                                    <label for="year" class="font-weight-bolder ml-2"> <span class="mandatory">*</span> Year Month :&nbsp;&nbsp;</label>
                                    <input class="form-control month-picker" id="txtMonthYear" type="text" data-date-format="yyyymm" data-name="txtMonthYear" placeholder="YYYYMM" />
                                    <div class="input-group-append">
                                        <span class="input-group-text">
                                            <i class="far fa-calendar-alt"></i>
                                        </span>
                                    </div>
                                </div>

                                <label for="line" class="font-weight-bolder ml-2"> <span class="mandatory">*</span> Line Code :</label>
                                <input type="text" id="line" class="form-control ml-2" maxlength="4" style="width: 50px;" />

                                <label for="partsno" class="font-weight-bolder ml-2">Parts No. :</label>
                                <input type="text" name="partsno" class="form-control ml-1" maxlength="5" style="width: 55px;">
                                <strong class="ml-1"><b>-</b></strong>
                                <input type="text" name="partsno" class="form-control ml-1" maxlength="5" style="width: 55px;">
                                <strong class="ml-1"><b>-</b></strong>
                                <input type="text" name="partsno" class="form-control ml-1" maxlength="2" style="width: 30px;">
                            </div>
                        </div>
                    </div>
                </div>
                <br />

                <div class="row">
                    <div class="col-md-8">
                        <div class="form-inline">
                            <div class="form-group">
                                <label for="statuscd" class="font-weight-bolder ml-2">&nbsp;Status Code :</label>
                                <select class="form-control ml-2" style="width: 170px;" id="statuscd">
                                    <option selected>--All--</option>
                                    <option value="0">0 - Trial</option>
                                    <option value="1">1 - Volume Production</option>
                                    <option value="2">2 - CPO</option>
                                    <option value="3">3 - Service Parts (Volume Production)</option>
                                    <option value="4">4 - Service Parts (Past)</option>
                                </select>
                                <label for="cfc" class="font-weight-bolder ml-2"> Car Family Code :</label>
                                <input type="text" id="cfc" class="form-control ml-2" style="width: 50px;" placeholder="" maxlength="4" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 text-right">
                        <div class="form-group-sm">
                            <button class="btn btn-md btn-default initialBtn">Clear</button>
                            <button class="btn btn-md btn-info initialBtn">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>