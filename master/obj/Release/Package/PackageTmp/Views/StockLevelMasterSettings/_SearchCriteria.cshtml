<div class="row customContainer mt-4">
    <div class="col-md-12">
        <div class="card customShadow">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-9">
                        <h3 class="card-title">
                            <i class="fas fa-search"></i>
                            Search Criteria
                        </h3>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group-sm">
                            <h5 class="text-right"><span class="badge companyCd">Company : <span id="comcd">112B</span></span></h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-inline">
                            <div class="col-md-2 pl-0 pr-0">
                                <div class="form-group">
                                    <label for="proc" class="font-weight-bolder ml-2">PROCESS &nbsp; :</label>
                                    <input type="text" name="proccd" class="form-control ml-2 col-md-4" />
                                </div>
                            </div>
                            <div class="col-md-2 pl-0 pr-0">
                                <div class="form-group">
                                    <label for="linecd" class="font-weight-bolder ml-2">Line Code :</label>
                                    <input type="text" name="linecd" class="form-control ml-2 col-md-5" />
                                </div>
                            </div>
                            <div class="col-md-2 pl-0 pr-0">
                                <div class="form-group">
                                    <label for="cfc" class="font-weight-bolder ml-2">CarFamilyCD :</label>
                                    <input type="text" name="cfc" class="form-control ml-2 col-md-3" />
                                </div>
                            </div>
                            <div class="col-md-3 pl-0 pr-0">
                                <div class="form-group">
                                        <label for="partsno" class="font-weight-bolder">Parts No. :</label>
                                        <input type="text" name="partsno" class="form-control ml-1 col-md-2" maxlength="5" />
                                        <strong><b>-</b></strong>
                                        <input type="text" name="partsno" class="form-control ml-1 col-md-2" maxlength="5" />
                                        <strong><b>-</b></strong>
                                        <input type="text" name="partsno" class="form-control ml-1 col-md-1" maxlength="2" />
                                </div>
                            </div>
                            <div class="col-md-3 pl-0 pr-0">
                                <div class="form-group">
                                    <label for="statuscd" class="font-weight-bolder ml-2">StatusCd :</label>
                                    <select class="form-control col-md-8 col-lg-7 ml-2" id="statuscd">
                                        <option selected>Choose...</option>
                                        <option value="1">One</option>
                                        <option value="2">Two</option>
                                        <option value="3">Three</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div><hr />
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-12">
                        <div class="form-group-sm">
                            <div class="text-right">
                                <button class="btn btn-md btn-default initialBtn">Clear</button>
                                <button class="btn btn-md btn-info initialBtn">Search</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>