<div class="row customContainer mt-4">
    <div class="col-md-8">
        <div class="card customShadow">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-search"></i>
                    Search Criteria
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-10">
                        <div class="form-inline">
                            <div class="form-group">
                                <label for="cfc" class="font-weight-bolder ml-2 mr-3">Del/Packing Month</label>
                            </div>
                            <div class="form-group" style="width: 100px;">
                                <label for="year" class="font-weight-bolder ml-2">Year :</label>
                                <input type="text" name="year" class="form-control ml-2 col-md-6" placeholder="YYYY" />
                            </div>
                            <div class="form-group" style="width: 110px;">
                                <label for="month" class="font-weight-bolder ml-2">Month :</label>
                                <input type="text" name="month" class="form-control ml-2 col-md-4" placeholder="MM" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group-sm">
                            <h5 class="text-right"><span class="badge companyCd">Company : <span id="comcd">112B</span></span></h5>
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-10">
                        <div class="form-inline">                            
                            <div class="form-group">
                                <div class="form-check mr-3 pl-2">
                                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1">
                                    <label class="form-check-label" for="exampleRadios1">
                                        ALL
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                                    <label class="form-check-label" for="exampleRadios2">
                                        Car Family Code Selection
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group-sm text-right">
                            <button type="button" id="btn-search" class="btn btn-info" onclick="onSearch()" style="padding-right: 23px;padding-left: 23px;">
                                <i class="fa fa-search"></i> Search
                            </button>
                        </div>
                    </div>
                </div><hr />
                <div class="row">
                    <div class="col-md-7">
                        <div id="gridTableCourse">
                            @Html.Partial("_GridView")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>